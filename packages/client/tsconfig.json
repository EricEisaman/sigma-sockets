{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Override for library build
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "moduleResolution": "node",
    "composite": true,
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "@sigmasockets/*": ["../*/src"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../types" }
  ]
}
