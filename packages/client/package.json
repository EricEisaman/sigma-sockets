{
  "name": "sigmasockets-client",
  "version": "1.0.0",
  "description": "High-performance WebSocket client with FlatBuffers serialization and automatic reconnection",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./node": {
      "import": "./dist/node-exports.js",
      "types": "./dist/types/node-exports.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/generated/**/*",
    "schemas/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "npm run generate:flatbuffers && vite build && tsc --declaration --outDir dist",
    "generate:flatbuffers": "node ../../scripts/create-clean-flatbuffers.js",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "websocket",
    "realtime",
    "multiplayer",
    "flatbuffers",
    "high-performance",
    "typescript",
    "nodejs",
    "sigmasockets"
  ],
  "author": {
    "name": "Eric Eisaman",
    "email": "eric@eisaman.com",
    "url": "https://www.npmjs.com/~sirfizx"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-ericeisaman:EricEisaman/sigma-sockets.git"
  },
  "homepage": "https://github.com/EricEisaman/sigma-sockets#readme",
  "bugs": {
    "url": "https://github.com/EricEisaman/sigma-sockets/issues"
  },
  "dependencies": {
    "@sigmasockets/types": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "flatbuffers": "25.2.10",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
