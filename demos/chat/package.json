{
  "name": "sigmasockets-chat-demo",
  "version": "1.0.0",
  "description": "Chat demo showcasing SigmaSockets client and server",
  "type": "module",
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.json",
    "dev:server:watch": "tsc --watch",
    "dev": "npm run cleanup:ports && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:chat": "npm run cleanup:ports && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "npm run build:server && node dist/chat-server.js",
    "cleanup:ports": "./scripts/cleanup-ports.sh",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:css": "stylelint '**/*.{css,scss,sass,less}' --ignore-path .gitignore",
    "lint:all": "npm run lint && npm run lint:css",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "websocket",
    "chat",
    "demo",
    "sigmasockets",
    "vite",
    "typescript"
  ],
  "author": "Manus AI",
  "license": "MIT",
  "dependencies": {
    "@mdi/font": "7.4.47",
    "sigmasockets-client": "^1.0.0",
    "sigmasockets-server": "1.0.2",
    "vue": "^3.4.0",
    "vuetify": "3.9.7"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "0.5.1",
    "concurrently": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "10.4.0",
    "jsdom": "26.1.0",
    "stylelint": "16.23.1",
    "stylelint-config-recommended": "17.0.0",
    "stylelint-config-standard": "39.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
